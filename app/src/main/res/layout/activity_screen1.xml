<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal"> <!-- Set background color to teal -->

    <!-- Row for back arrow and title -->

    <!-- Row for icons and images -->

    <RelativeLayout
        android:id="@+id/upperRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- Back arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="54dp"
            android:layout_height="46dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:onClick="onBackClicked"
            android:paddingEnd="10dp"
            android:src="@drawable/back_arrow" />

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="GUI DEMO 21L-7634"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/iconRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upperRow"
        android:padding="10dp">

        <!-- Icon 1 -->

        <!-- Icon 2 -->
        <LinearLayout
            android:id="@+id/icon1Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon1"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_1"
                android:textSize="15sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/icon2Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@id/icon2"
                android:src="@drawable/icon2"
                android:layout_marginRight="5dp"/>
            <TextView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_2"
                android:textSize="15sp"/>


        </LinearLayout>

        <!-- Icon 3 -->
        <LinearLayout
            android:id="@+id/icon3Layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/icon3"
                android:src="@drawable/icon3" />

            <TextView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/icon_3"
                android:textSize="15sp"/>


        </LinearLayout>
    </LinearLayout>

    <!-- Frame layout for fragment container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iconRow"
        android:background="@color/white" />

</RelativeLayout>
